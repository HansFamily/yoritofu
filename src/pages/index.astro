<style>
	/* Banner Slider Section */
	.banner-slider {
		min-height: 100vh;
		position: relative;
		overflow: hidden;
	}

	.slider-container {
		position: relative;
		width: 100%;
		height: 100vh;
	}

	.slides {
		position: relative;
		width: 100%;
		height: 100%;
	}

	.slide {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0;
		visibility: hidden;
		transition: opacity 0.6s ease-in-out;
	}

	.slide.active {
		opacity: 1;
		visibility: visible;
	}

	.banner-content {
		position: relative;
		z-index: 2;
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100%;
		text-align: center;
	}

	.banner-content::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			135deg,
			rgba(0, 0, 0, 0.4) 0%,
			rgba(0, 0, 0, 0.2) 50%,
			rgba(0, 0, 0, 0.6) 100%
		);
		z-index: -1;
	}

	.banner-text {
		max-width: 700px;
		padding: var(--space-8);
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(10px);
		border-radius: var(--radius-2xl);
		border: 1px solid rgba(255, 255, 255, 0.1);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
