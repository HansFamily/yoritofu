---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Gallery - YoriTofu" description="Explore our gallery of delicious Korean dishes, restaurant ambiance, and memorable dining moments at YoriTofu.">
	<Header />
	
	<main>
		<!-- Gallery Grid Section -->
		<section class="gallery-section section">
			<div class="container">
				<div class="gallery-grid">
					<!-- Gallery Item 1 -->
					<div class="gallery-item">
						<div class="gallery-media">
							<img src="/bibimbob2.jpg" alt="Korean Bibimbap" class="gallery-image" />
						</div>
					</div>

					<!-- Gallery Item 2 -->
					<div class="gallery-item">
						<div class="gallery-media">
							<img src="/store.jpeg" alt="Restaurant Interior" class="gallery-image" />
						</div>
					</div>

					<!-- Gallery Item 3 - Placeholder for future content -->
					<div class="gallery-item">
						<div class="gallery-media">
							<div class="gallery-placeholder">
								<svg class="placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
									<circle cx="8.5" cy="8.5" r="1.5"/>
									<polyline points="21,15 16,10 5,21"/>
								</svg>
								<span>Add Image</span>
							</div>
						</div>
					</div>

					<!-- Gallery Item 4 - Placeholder for future content -->
					<div class="gallery-item">
						<div class="gallery-media">
							<div class="gallery-placeholder">
								<svg class="placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
									<circle cx="8.5" cy="8.5" r="1.5"/>
									<polyline points="21,15 16,10 5,21"/>
								</svg>
								<span>Add Image</span>
							</div>
						</div>
					</div>

					<!-- Gallery Item 5 - Placeholder for future content -->
					<div class="gallery-item">
						<div class="gallery-media">
							<div class="gallery-placeholder">
								<svg class="placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
									<circle cx="8.5" cy="8.5" r="1.5"/>
									<polyline points="21,15 16,10 5,21"/>
								</svg>
								<span>Add Image</span>
							</div>
						</div>
					</div>

					<!-- Gallery Item 6 - Placeholder for future content -->
					<div class="gallery-item">
						<div class="gallery-media">
							<div class="gallery-placeholder">
								<svg class="placeholder-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
									<circle cx="8.5" cy="8.5" r="1.5"/>
									<polyline points="21,15 16,10 5,21"/>
								</svg>
								<span>Add Image</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>
	/* Gallery Section */
	.gallery-section {
		background-color: var(--color-gray-50);
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--space-8);
		margin-top: var(--space-8);
	}

	.gallery-item {
		background-color: var(--color-white);
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-md);
		transition: all var(--transition-normal);
	}

	.gallery-item:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-xl);
	}

	.gallery-media {
		position: relative;
		width: 100%;
		height: 250px;
		overflow: hidden;
	}

	.gallery-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform var(--transition-normal);
	}

	.gallery-item:hover .gallery-image {
		transform: scale(1.05);
	}

	.gallery-placeholder {
		width: 100%;
		height: 100%;
		background-color: var(--color-gray-100);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		color: var(--color-gray-500);
		font-weight: var(--font-weight-medium);
		transition: all var(--transition-normal);
	}

	.gallery-item:hover .gallery-placeholder {
		background-color: var(--color-gray-200);
		color: var(--color-gray-600);
	}

	.placeholder-icon {
		width: 48px;
		height: 48px;
		margin-bottom: var(--space-2);
		opacity: 0.6;
	}


	/* Responsive Design */
	@media (max-width: 768px) {
		.gallery-grid {
			grid-template-columns: 1fr;
			gap: var(--space-6);
		}

		.gallery-media {
			height: auto;
			aspect-ratio: 4/3;
		}
	}

	/* Large screens - 4 columns */
	@media (min-width: 1200px) {
		.gallery-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	/* Extra large screens - 5 columns */
	@media (min-width: 1400px) {
		.gallery-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}
</style>
