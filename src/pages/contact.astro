---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - YoriTofu Korean Restaurant" description="Get in touch with YoriTofu. Find our location, hours, and contact information. Visit us for authentic Korean cuisine in a warm, welcoming atmosphere.">
	<Header />
	
	<main>
		<!-- Hero Section -->
		<section class="contact-hero">
			<div class="container">
				<div class="hero-content">
					<h1 class="hero-title">Contact Us</h1>
					</p>
				</div>
			</div>
		</section>

		<!-- Contact Information Section -->
		<section class="contact-info section">
			<div class="container">
				<div class="contact-grid">
					<!-- Restaurant Information -->
					<div class="contact-card">
						<div class="contact-card-header">
							<h2 class="contact-card-title">Restaurant Information</h2>
						</div>
						<div class="contact-card-body">
							<div class="info-item">
								<div class="info-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
										<circle cx="12" cy="10" r="3"></circle>
									</svg>
								</div>
								<div class="info-content">
									<h3 class="info-title">Address</h3>
									<p class="info-text">
										YoriTofu<br>
										
21209 Hawthorne Blvd B, Torrance, CA 90503
									</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<circle cx="12" cy="12" r="10"></circle>
										<polyline points="12,6 12,12 16,14"></polyline>
									</svg>
								</div>
								<div class="info-content">
									<h3 class="info-title">Hours</h3>
									<div class="info-text">
										<p><strong>Monday - Saturday</strong> 11:00 AM - 12:00 AM</p>
										<p><strong>Sunday:</strong> 11:00 AM - 10:00 PM</p>
										<p><strong>Tuesday:</strong> Closed</p>
									</div>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
									</svg>
								</div>
								<div class="info-content">
									<h3 class="info-title">Phone</h3>
									<p class="info-text">
										<a href="tel:+1234567890" class="contact-link">(310) 357-5275</a>
									</p>
								</div>
							</div>

							<div class="info-item">
								<div class="info-icon">
									<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
										<polyline points="22,6 12,13 2,6"></polyline>
									</svg>
								</div>
								<div class="info-content">
									<h3 class="info-title">Email</h3>
									<p class="info-text">
										<a href="mailto:info@yoritofu.com" class="contact-link">info@yoritofu.com</a>
									</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Restaurant Photo -->
					<div class="contact-photo">
						<img src="/store.jpeg" alt="YoriTofu Restaurant Interior" class="restaurant-image" />
						<div class="photo-overlay">
							<h3 class="photo-title">Visit Our Restaurant</h3>
							<p class="photo-description">
								Experience our warm, welcoming atmosphere and authentic Korean cuisine
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Map Section -->
		<section class="map-section">
			<div class="container">
				<div class="map-header">
					<h2 class="map-title">Find Us</h2>
					<p class="map-description">
					</p>
				</div>
				
				<div class="map-container">
					<iframe 
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3305.123456789!2d-118.3580216!3d33.837312!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80c2b555906b0d67%3A0xca80373d51c74171!2sYoritofu!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
						width="100%" 
						height="400" 
						style="border:0;" 
						allowfullscreen="" 
						loading="lazy" 
						referrerpolicy="no-referrer-when-downgrade"
						class="map-iframe">
					</iframe>
				</div>
				
				<div class="map-actions">
					<a href="https://www.google.com/maps/place/Yoritofu/@33.837312,-118.3580216,16z/data=!3m1!4b1!4m6!3m5!1s0x80c2b555906b0d67:0xca80373d51c74171!8m2!3d33.837312!4d-118.3554467!16s%2Fg%2F11xyfjwdgb?entry=ttu&g_ep=EgoyMDI1MDkyNC4wIKXMDSoASAFQAw%3D%3D" 
					   class="btn btn-primary" 
					   target="_blank" 
					   rel="noopener noreferrer">
						Get Directions
					</a>
				</div>
			</div>
		</section>

	</main>
	
	<Footer />
</Layout>

<style>
	/* Contact Hero Section */
	.contact-hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
		color: var(--color-white);
		padding: var(--space-8) 0 var(--space-6);
		text-align: center;
	}

	.hero-title {
		font-size: var(--font-size-4xl);
		font-weight: var(--font-weight-bold);
		margin-bottom: var(--space-4);
		color: var(--color-white);
	}

	.hero-description {
		font-size: var(--font-size-lg);
		color: rgba(255, 255, 255, 0.9);
		max-width: 600px;
		margin: 0 auto;
		line-height: var(--line-height-relaxed);
	}

	/* Contact Information Section */
	.contact-info {
		background-color: var(--color-white);
		padding: var(--space-16) 0;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--space-12);
		align-items: start;
	}

	.contact-card {
		background-color: var(--color-white);
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-lg);
		overflow: hidden;
	}

	.contact-card-header {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
		color: var(--color-white);
		padding: var(--space-4);
	}

	.contact-card-title {
		font-size: var(--font-size-2xl);
		font-weight: var(--font-weight-bold);
		margin: 0;
		color: var(--color-white);
	}

	.contact-card-body {
		padding: var(--space-6);
	}

	.info-item {
		display: flex;
		align-items: flex-start;
		gap: var(--space-4);
		margin-bottom: var(--space-6);
	}

	.info-item:last-child {
		margin-bottom: 0;
	}

	.info-icon {
		flex-shrink: 0;
		width: 48px;
		height: 48px;
		background-color: var(--color-primary);
		border-radius: var(--radius-md);
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-white);
	}

	.info-content {
		flex: 1;
	}

	.info-title {
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-semibold);
		color: var(--color-gray-900);
		margin-bottom: var(--space-2);
	}

	.info-text {
		color: var(--color-gray-600);
		line-height: var(--line-height-relaxed);
		margin: 0;
	}

	.info-text p {
		margin-bottom: var(--space-1);
	}

	.info-text p:last-child {
		margin-bottom: 0;
	}

	.contact-link {
		color: var(--color-primary);
		text-decoration: none;
		font-weight: var(--font-weight-medium);
		transition: color var(--transition-fast);
	}

	.contact-link:hover {
		color: var(--color-primary-dark);
		text-decoration: underline;
	}

	/* Contact Photo */
	.contact-photo {
		position: relative;
		height: 500px;
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
	}

	.restaurant-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.photo-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
		color: var(--color-white);
		padding: var(--space-8) var(--space-6) var(--space-6);
	}

	.photo-title {
		font-size: var(--font-size-xl);
		font-weight: var(--font-weight-bold);
		margin-bottom: var(--space-2);
		color: var(--color-white);
	}

	.photo-description {
		color: rgba(255, 255, 255, 0.9);
		line-height: var(--line-height-relaxed);
		margin: 0;
	}

	/* Map Section */
	.map-section {
		background-color: var(--color-gray-50);
		padding: var(--space-16) 0;
	}

	.map-header {
		text-align: center;
		margin-bottom: var(--space-12);
	}

	.map-title {
		font-size: var(--font-size-3xl);
		font-weight: var(--font-weight-bold);
		color: var(--color-gray-900);
		margin-bottom: var(--space-4);
	}

	.map-description {
		font-size: var(--font-size-lg);
		color: var(--color-gray-600);
		max-width: 600px;
		margin: 0 auto;
		line-height: var(--line-height-relaxed);
	}

	.map-container {
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
		margin-bottom: var(--space-8);
	}

	.map-iframe {
		width: 100%;
		height: 400px;
		border: none;
	}

	.map-actions {
		text-align: center;
	}


	/* Responsive Design */
	@media (max-width: 768px) {
		.contact-grid {
			grid-template-columns: 1fr;
			gap: var(--space-8);
		}

		.contact-photo {
			height: 300px;
		}


		.hero-title {
			font-size: var(--font-size-3xl);
		}

		.map-title,
		.form-title {
			font-size: var(--font-size-2xl);
		}
	}

	@media (max-width: 480px) {
		.contact-hero {
			padding: var(--space-6) 0 var(--space-4);
		}

		.contact-info,
		.map-section {
			padding: var(--space-12) 0;
		}

		.contact-card-body {
			padding: var(--space-4);
		}


		.hero-title {
			font-size: var(--font-size-2xl);
		}

		.hero-description {
			font-size: var(--font-size-base);
		}
	}
</style>
